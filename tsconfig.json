{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,    
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths" : {
      "*" : [
        "lib/*",
        "styles/*",
        "*"
      ],
      "api/*": [ "pages/api/*" ]
    },
    "outDir": "dist",
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/utils/styles/camelcase"],
  "exclude": ["node_modules"],
}
